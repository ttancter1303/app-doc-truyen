<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment.RecommendFragment"
    android:orientation="vertical"
    android:layout_marginTop="10dp">

<GridLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

>
    <ImageView
        android:id="@+id/imageView_R1"
        android:layout_width="115dp"
        android:layout_height="135dp"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/slime300"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/imageView_R2"
        android:layout_width="115dp"
        android:layout_height="135dp"
        android:layout_row="0"
        android:layout_column="1"
        android:background="@drawable/slime300"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/imageView_R3"
        android:layout_width="115dp"
        android:layout_height="135dp"
        android:layout_row="0"
        android:layout_column="2"
        android:background="@drawable/slime300"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView_R1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_R2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_R3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:text="TextView" />
    <ImageView
        android:id="@+id/imageView_R4"
        android:layout_width="115dp"
        android:layout_height="135dp"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/slime300"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/imageView_R5"
        android:layout_width="115dp"
        android:layout_height="135dp"
        android:layout_row="2"
        android:layout_column="1"
        android:background="@drawable/slime300"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:id="@+id/imageView_R16"
        android:layout_width="115dp"
        android:layout_height="135dp"
        android:layout_row="2"
        android:layout_column="2"
        android:background="@drawable/slime300"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView_R4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_R5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView_R6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:text="TextView" />
</GridLayout>
</LinearLayout>